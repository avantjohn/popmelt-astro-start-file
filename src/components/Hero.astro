---
import { Picture } from 'astro:assets';
import laptop from '../assets/pop-laptop-mockup.png';

const heroTitle = `build. together. `;
const heroDesc = `a curation of resources for crafting digital interfaces and interactions.`;
---

<script>
    import { animate, scroll } from 'motion';
    animate('.fade', { opacity: [0, 1] }, { duration: 2 });
</script>

<div class="hero fade">
    <div class="hero-text-wrap">
        <div class="hero-title">
            <h1>{heroTitle}</h1>
        </div>
        <div class="hero-desc">
            <p class="fs-p-md">{heroDesc}</p>
        </div>
    </div>
    <div class="hero-image-wrap">
        <div class="image">
            <Picture src={laptop} alt="Laptop" widths={[400, 800, 1200, 1920, 2560]} sizes="100vw" />
        </div>
    </div>
</div>

<style>
    .fade {
        opacity: 0;
    }
    .hero {
        max-width: 100%;
        padding: var(--p-xl);
        display: flex;
        flex-direction: column;
    }

    .hero-text-wrap {
        max-width: 100%;
        display: flex;
        flex-direction: row;
        align-items: end;
    }

    .hero-title {
        padding-top: 4rem;
        margin-bottom: 2rem;
        flex-grow: 1;
        flex-shrink: 0;
    }

    .hero-desc {
        padding: 4rem 0 0.75rem;
        margin-bottom: 2rem;
        display: flex;
        justify-content: end;
    }

    .hero-desc p {
        text-transform: uppercase;
        width: 55%;
    }

    .hero-image-wrap {
        max-width: 100%;
        aspect-ratio: 16/9;
        display: flex;
        overflow: hidden;
        border: var(--c-border-primary) 1px solid;
        border-radius: var(--b-radius-lg);
        background-color: var(--c-surface-alt-primary);
    }

    .image {
        max-width: 100%;
        width: 100%;
    }

    .image :global(img) {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* LAPTOP - Responsive Styles */
    @media (max-width: 1280px) {
        .hero-text-wrap {
            flex-direction: column;
            align-items: start;
        }
        .hero-desc {
            padding: 0rem;
            justify-content: start;
        }
    }

    /* TABLET - Responsive Styles */
    @media (max-width: 768px) {
        .hero-image-wrap {
            aspect-ratio: 9/12;
        }

        .hero-desc p {
            width: 100%;
        }
    }

    /* MOBILE - Responsive Styles */
    @media (max-width: 425px) {
        .div {
        }
    }
</style>
