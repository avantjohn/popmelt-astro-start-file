<style>
    /* Page Layout Styles */

    .fade {
        opacity: 0;
    }

    .main-wrap {
        max-width: 100%;
        flex-grow: 1;
    }

    section {
        width: 100%;
        max-width: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .wrap {
        padding: var(--p-lg);
    }

    /* Custom Styles */
    /* Table Styles */

    .table-wrap {
        display: flex;
        justify-content: center;
        flex-direction: column;
        gap: var(--p-lg);
        padding: var(--p-xl);
        border: var(--c-border-primary) 1px solid;
        background-color: var(--c-surface-primary);
        border-radius: var(--b-radius-lg);
        overflow-x: auto;
        scrollbar-width: thin;
        scrollbar-color: var(--c-border-secondary) transparent;
        margin-bottom: 4rem;
        white-space: nowrap;
    }

    .table-wrap::-webkit-scrollbar {
        height: 8px;
        background: #f0f0f0;
    }

    .table-wrap::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

    .table-wrap::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    table {
        flex-grow: 1;
        background-color: var(--c-surface-primary);
        border-collapse: collapse;
        border-radius: var(--b-radius-lg);
        outline: var(--c-border-primary) 1px solid;
        outline-offset: -1px;
        overflow: hidden;
        table-layout: fixed;
    }

    tr {
        padding: 1rem;
    }

    th {
        text-align: left;
        padding: 1.125rem 1.5rem 1rem;
        background-color: var(--c-surface-primary);
        font-weight: inherit;
        color: var(--c-text-secondary);
    }

    td {
        background-color: var(--c-surface-primary);
        border: var(--c-border-primary) 1px solid;
        width: 20%;
    }

    .table-item {
        display: flex;
        padding: 0.5rem;
    }

    .column-header {
        padding: 1.125rem 1.5rem 1rem;
        text-transform: uppercase;
        background-color: oklch(from var(--c-surface-secondary) l c h / 33%);
    }

    /* LAPTOP SMALL - Responsive Styles */
    @media (max-width: 1024px) {
        .div {
        }
    }

    /* TABLET - Responsive Styles */
    @media (max-width: 768px) {
        table {
            min-width: 100%;
            margin-bottom: var(--p-lg);
        }
    }

    /* MOBILE - Responsive Styles */
    @media (max-width: 425px) {
        .div {
        }
    }
</style>
