---
import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import Button from '../../components/Button.astro';
const placeholder = `sandbox`;
---

<script>
    import { animate, scroll } from 'motion';
    animate('.fade', { opacity: [0, 1] }, { duration: 1 });
</script>

<Layout title="Sandbox">
    <div class="main-wrap fade">
        <section>
            <div class="wrap hero">
                <h1>{placeholder}</h1>
            </div>
        </section>
        <section>
            <div class="sandbox-wrap">
                <a href="/docs/sandbox">
                    <Button />
                </a>
            </div>
        </section>
    </div>
</Layout>

<style>
    /* Page Layout Styles */

    .fade {
        opacity: 0;
    }

    .main-wrap {
        max-width: 100%;
        flex-grow: 1;
    }

    section {
        width: 100%;
        max-width: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .wrap {
        padding: var(--p-xl);
    }

    /* Custom Styles */

    .hero {
        border-bottom: var(--c-border-primary) 1px solid;
    }

    .sandbox-wrap {
        width: 100%;
        height: 66vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

