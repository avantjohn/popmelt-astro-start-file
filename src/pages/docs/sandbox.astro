---
import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import Button from '../../components/Button.astro';
import PageHeader from '../../components/docs/PageHeader.astro';
---

<script>
    import { animate, scroll } from 'motion';
    animate('.fade', { opacity: [0, 1] }, { duration: 1, ease: 'easeInOut' });
</script>

<Layout title="Sandbox">
    <div class="main-wrap fade">
        <section>
            <PageHeader title="sandbox" />
        </section>
        <section>
            <div class="sandbox-wrap">
                <a href="/docs/sandbox">
                    <Button />
                    <Button label="Your Label Gets Long" href="/docs" icon="action/download" />
                </a>
            </div>
        </section>
    </div>
</Layout>

<style>
    /* Page Layout Styles */

    .fade {
        opacity: 0;
    }

    .main-wrap {
        max-width: 100%;
        flex-grow: 1;
    }

    section {
        width: 100%;
        max-width: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .wrap {
        padding: var(--p-xl);
    }

    /* Custom Styles */

    .hero {
        border-bottom: var(--c-border-primary) 1px solid;
    }

    .sandbox-wrap {
        width: 100%;
        height: 66vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: var(--p-lg);
    }

    /* LAPTOP SMALL - Responsive Styles */
    @media (max-width: 1024px) {
        .div {
        }
    }

    /* TABLET - Responsive Styles */
    @media (max-width: 768px) {
        .div {
        }
    }

    /* MOBILE - Responsive Styles */
    @media (max-width: 425px) {
        .div {
        }
    }
</style>
