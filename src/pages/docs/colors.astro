<style>
    /* Page Layout Styles */

    .fade {
        opacity: 0;
    }

    .main-wrap {
        max-width: 100%;
        flex-grow: 1;
    }

    section {
        width: 100%;
        max-width: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .wrap {
        padding: var(--s-global-padding);
    }

    /* Header Styles */

    .page-header {
        border-bottom: var(--c-border-primary) 1px solid;
    }

    .nav-links {
        display: flex;
        gap: 1rem;
        padding: 2rem var(--s-global-padding);
        margin-bottom: 2rem;
        border-bottom: var(--c-border-primary) 1px solid;
    }

    .nav-link {
        background-color: var(--c-fill-primary);
        color: var(--c-text-alt-primary);
        padding: 0.33rem 0.75rem;
        border-radius: var(--b-radius-md);
    }

    .nav-link:hover {
        background: var(--c-fill-secondary);
    }

    /* Table Styles */

    .table-wrap {
        display: flex;
        justify-content: center;
        padding: var(--s-global-padding);
        border: var(--c-border-primary) 1px solid;
        background-color: var(--c-surface-primary);
        border-radius: var(--b-radius-lg);
        overflow-x: auto;
        scrollbar-width: thin;
        scrollbar-color: var(--c-border-secondary) transparent;
        margin-bottom: 4rem;
    }

    .table-wrap::-webkit-scrollbar {
        height: 8px;
        background: #f0f0f0;
    }

    .table-wrap::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

    .table-wrap::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    table {
        flex-grow: 1;
        background-color: var(--c-surface-primary);
        border-collapse: collapse;
        border-radius: var(--b-radius-lg);
        outline: var(--c-border-primary) 1px solid;
        outline-offset: -1px;
        overflow: hidden;
    }

    tr {
        padding: 1rem;
    }

    th {
        text-align: left;
        text-transform: uppercase;
        padding: 1.125rem 1.5rem 1rem;
        background-color: var(--c-surface-primary);
        font-weight: inherit;
    }

    td {
        background-color: var(--c-surface-primary);
        border: var(--c-border-primary) 1px solid;
    }

    .table-item {
        display: flex;
        padding: 0.5rem;
    }

    .tag {
        display: flex;
        padding: 0.5rem 0.5rem;
        background-color: var(--c-surface-secondary);
        border: var(--c-border-secondary) 1px solid;
        border-radius: var(--b-radius-lg);
        cursor: pointer;
        gap: 0.75rem;
    }

    .tag-icon {
        width: 22px;
        height: 22px;
        border: var(--c-border-secondary) 1px solid;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--b-radius-md);
        margin-right: -0.25rem;
    }

    .tag-color-swatch {
        width: 12px;
        height: 12px;
        border-radius: var(--b-radius-xs);
    }

    .tag-label {
        padding: 0 0.25rem;
    }

    /* TABLET - Responsive Styles */
    @media (max-width: 768px) {
        .table-wrap {
            display: block;
            white-space: nowrap;
        }

        table {
            width: auto; /* Ensure the table doesn't shrink */
        }
    }

    /* MOBILE - Responsive Styles */
    @media (max-width: 425px) {
        .wrap {
        }
    }
</style>
