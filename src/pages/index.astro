---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import Hero from '../components/Hero.astro';

const placeholder = `World`;
---

<script>
    import { animate, scroll } from 'motion';
    animate('.fade', { opacity: [0, 1] }, { duration: 2 });
</script>

<Layout title="Page Name">
    <div class="main-wrap fade">
        <section>
            <Hero />
        </section>
        <section>
            <div class="wrap">
                <h2>Section</h2>
            </div>
        </section>
    </div>
</Layout>

<style>
    /* Page Layout Styles */

    .fade {
        opacity: 0;
    }

    .main-wrap {
        max-width: 100%;
        flex-grow: 1;
    }

    section {
        width: 100%;
        max-width: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .wrap {
        padding: var(--p-xl);
    }

    /* Custom Styles */

    .hero {
        height: 50vh;
    }

